<UserControl x:Class="DropFileControl.DropFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DropFileControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   <Border BorderBrush="Blue" Background="Transparent" BorderThickness="3" CornerRadius="10" DragOver="UIElement_OnDragOver" AllowDrop="True" Drop="UIElement_OnDrop">
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Name="lb"></Label>
   </Border>
</UserControl>
